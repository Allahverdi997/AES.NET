
@{
    ViewData["Title"] = "SubcontrolWithSUBID";
}
@model AbonentGostericiModel;

@section breadcramb{
    <li>
        <a asp-controller="Abonentler" asp-action="Index">Abonentlər</a>
    </li>
}
@section styles{
    <link href="~/HTMLAdmin/assets/css/required/select2.min.css" rel="stylesheet" />
    <link type="text/css" href="~/HTMLAdmin/assets/css/demo-files/form-extras.css" rel="stylesheet" />

    <link type="text/css" href="~/HTMLAdmin/assets/css/optional/switchery.min.css" rel="stylesheet" />
    <link type="text/css" href="~/HTMLAdmin/assets/css/optional/powerange.min.css" rel="stylesheet" />
    <link type="text/css" href="~/HTMLAdmin/assets/css/optional/jquery.bootstrap-touchspin.min.css" rel="stylesheet" />
    <link type="text/css" href="~/HTMLAdmin/assets/css/optional/bootstrap-tagsinput.min.css" rel="stylesheet" />
    <link type="text/css" href="~/HTMLAdmin/assets/css/optional/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link type="text/css" href="~/HTMLAdmin/assets/css/optional/bootstrap-multiselect.min.css" rel="stylesheet" />

    <style>
        .my-custom-scroolbar {
            position: relative;
            height: 200px;
            overflow: auto;
        }

        .table-wrapper-scrool-y {
            display: block;
        }
    </style>
}

<form role="form" class="form-horizontal" asp-controller="Abonentler" asp-action="AddSubcontrol">
    <div class="row">
        <div class="col-md-12">
            <div class="block basic-buttons-rounded">
                <div class="block-heading">
                    <div class="main-text h2">
                        Əməliyatlar
                    </div>
                    <div class="block-controls">
                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    </div>
                </div>
                <div class="block-content-outer" style="height:100px;">
                    <div class="block-content-inner">
                        <div class="col-md-9">
                            <button type="submit" style="margin-bottom:4px;" class="btn btn-primary rounded">
                                <span class="glyphicon glyphicon-save"></span>
                                Yadda Saxla
                            </button>
                            <button type="button" class="btn btn-primary rounded" style="margin-bottom:4px;">
                                <span class="glyphicon glyphicon-pencil"></span>
                                Yeni Əlave Moduna Keç
                            </button>
                            <button type="button" class="btn btn-primary rounded" style="margin-bottom:4px;">
                                <span class="glyphicon glyphicon-trash"></span>
                                Sil
                            </button>
                            <button type="button" asp-controller="Abonentler" asp-action="Subcontrol" asp-route-id="@Model.SubscribeSUBID" class="btn btn-primary rounded" style="margin-bottom:4px;">
                                <span class="glyphicon glyphicon-refresh"></span>

                            </button>
                            <button type="button" class="btn btn-primary rounded" style="margin-bottom:4px;">
                                <span class="glyphicon glyphicon-home"></span>

                            </button>
                            <button type="button" class="btn btn-primary rounded" style="margin-bottom:4px;">
                                <span class="glyphicon glyphicon-book"></span>

                            </button>
                            <button type="button" class="btn btn-primary rounded">
                                <span class="glyphicon glyphicon-folder-close"></span>
                            </button>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-control">Abonent:<span style="color:red;"><a asp-controller="Abonentler" asp-action="GETSUBSCRIBERBySUBID" asp-route-id="@Model.SubscribeSUBID">@Model.SubscribeSUBID</a></span></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <div class="block-heading">
                    <div class="main-text h2">
                        Yeni Göstərici Girişi
                    </div>
                    <div class="block-controls">
                        <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    </div>
                </div>
                <div class="block-content-outer" style="height:700px;">
                    <div class="block-content-inner">
                        @*InputWithButton*@
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="col-sm-3">Tarix</label>
                                <div class="input-group col-sm-9" id="datetimepickerGostericiGunu">
                                    <input type="date" class="form-control" name="DDATE">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="col-sm-3">Elektron Sayğac Göstəricisi</label>
                                <div class="input-group col-sm-9">
                                    <input type="text" class="form-control" name="REACTIVE_CH">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="col-sm-3">METER VALUE(*)</label>
                                <div class="input-group col-sm-9">
                                    <input type="text" class="form-control" name="METERVALUE">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="col-sm-3">PersonelID_SEQ(*)</label>
                                <div class="input-group col-sm-9">
                                    <select id="input-demo-v" class="form-control" name="PERSONEL_ID_SEQ">
                                        <option>Seçim...</option>
                                        @foreach (var personel in Model.PersonelIdSeqs)
                                        {
                                            <option value="@personel.ID">@personel.NAME</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="col-sm-3">Təzyiq</label>
                                <div class="input-group col-sm-9">
                                    <input type="text" class="form-control" name="TRANSCOEF">
                                </div>
                            </div>
                        </div>
                        <input type="hidden" value="@Model.SubscribeSUBID" name="SUBID" />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="exampleInputEmail1" class="col-sm-5">Movcud Gostericiler</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="table-responsive mCSB_scrollTools_horizontal">
                                <table class="table table-striped table-hover" style="overflow-y:scroll">
                                    <thead>
                                        <tr>
                                            <th>Tarix</th>
                                            <th>Gun-Sayi</th>
                                            <th>METER VALUE</th>
                                            <th>Tarif</th>
                                            <th>Serfiyyat</th>
                                            <th>Effektiv Serfiyyat</th>
                                            <th>Effektiv Deyer</th>
                                            <th>Elektron Saygac Gostericisi</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{ int sum = 0;}
                                        @foreach (var subcontrol in Model.Submeters)
                                        {
                                            <tr>
                                                @{
                                                    string editID = subcontrol.SUBID + "a" + Convert.ToString(subcontrol.DDATE.ToString("yyyy-MM-dd"));
                                                    string id = subcontrol.SUBID + "a" + subcontrol.METERVALUE.ToString();
                                                    sum = sum + subcontrol.METERVALUE;
                                                }

                                                <td><a asp-controller="Abonentler" asp-action="GetSubcontrol" asp-route-id="@editID">@subcontrol.DDATE</a></td>
                                                <td><a asp-controller="Abonentler" asp-action="GetSubcontrol" asp-route-id="@editID">Gun-Sayi</a></td>
                                                <td><a asp-controller="Abonentler" asp-action="GetSubcontrol" asp-route-id="@editID">@subcontrol.METERVALUE</a></td>
                                                <td><a asp-controller="Abonentler" asp-action="GetSubcontrol" asp-route-id="@editID">Tarif</a></td>
                                                <td><a asp-controller="Abonentler" asp-action="GetSubcontrol" asp-route-id="@editID">Serfiyyat</a></td>
                                                <td><a asp-controller="Abonentler" asp-action="GetSubcontrol" asp-route-id="@editID">Effektiv Serfiyyat</a></td>
                                                <td><a asp-controller="Abonentler" asp-action="GetSubcontrol" asp-route-id="@editID">Effektiv Deyer</a></td>
                                                <td><a asp-controller="Abonentler" asp-action="GetSubcontrol" asp-route-id="@editID">Elektron Saygac Gostericisi</a></td>
                                                <td><a class="btn btn-danger" asp-controller="Abonentler" asp-action="DeleteSubcontrol" asp-route-id="@id"><i class="glyphicon glyphicon-trash"></i></a></td>
                                            </tr>
                                        }
                                        <tr>
                                            <td colspan="9">Toplamlar</td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td colspan="6">@sum.ToString()</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section scripts{
    <script type="text/javascript" src="~/HTMLAdmin/assets/js/required/jquery-1.11.1.min.js"></script>

    <script type="text/javascript">

    </script>
}



